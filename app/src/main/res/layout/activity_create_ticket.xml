<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFDFDF"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        
        android:layout_height="60dp"
        android:background="@color/primary_dark"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:tint="@color/white"
            android:padding="10dp"
            android:clickable="true"
            android:src="@drawable/ic_baseline_chevron_left_24"
            tools:ignore="UseAppTint"
            android:focusable="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:padding="15dp"
            android:gravity="start"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="Create Tickets"
            android:textColor="#FFFFFF"
            />
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        tools:ignore="MissingConstraints">
    <ImageView
        android:layout_width="133dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/ticket"
        android:layout_marginTop="100dp"
        tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/fullName"
            android:layout_width="299dp"
            android:layout_height="46dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="Full Name*"
            android:textColorHint="#9E9E9E"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/etVehicleRegNo"
            android:layout_width="299dp"
            android:layout_height="46dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:hint="Vehicle Registration number*"
            android:textColorHint="#9E9E9E"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            />
        <EditText
            android:id="@+id/etRule"
            android:layout_width="299dp"
            android:layout_height="46dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:hint="Traffic Violation Rule*"
            android:textColorHint="#9E9E9E"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            />
        <EditText
            android:id="@+id/etFine"
            android:layout_width="299dp"
            android:layout_height="46dp"
            android:layout_margin="5dp"
            android:background="@color/white"
            android:hint="Fine*"
            android:textColorHint="#9E9E9E"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textColor="#000000"
            />

    <EditText
        android:id="@+id/etNotes"
        android:layout_width="299dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="comments*"
        android:textColorHint="#9E9E9E"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        />
<ImageView
    android:layout_width="125dp"
    android:layout_height="125dp"
    android:src="@drawable/ic_baseline_camera_alt_24"/>

    <Button
        android:id="@+id/CreateTicket"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/primary"
        android:text="CREATE Ticket"
        android:textColor="@color/white"
        android:textSize="16sp"
        />

    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
