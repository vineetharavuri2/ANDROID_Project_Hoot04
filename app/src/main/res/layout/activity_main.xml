<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal_200"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <FrameLayout
            android:id="@+id/frame_fragment"
            android:layout_width="362dp"
            android:layout_height="101dp"
            android:layout_margin="20sp" />

        <Button
            android:id="@+id/change_mode_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="change mode" />

        <TextView
            android:id="@+id/dogs_in_park_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Dogs In Park Currently:0"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="Reset" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp">

            <EditText
                android:id="@+id/maximum_edit_tv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Enter New Maximum"
                android:inputType="number"
                android:padding="10dp" />

            <Button
                android:id="@+id/change_max_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:padding="10dp"
                android:text="Change Max" />

        </LinearLayout>

        <Button
            android:id="@+id/double_entry_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Double Entry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp">

            <EditText
                android:id="@+id/dogs_edit_tv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Enter Dogs No"
                android:inputType="number"
                android:padding="10dp" />

            <Button
                android:id="@+id/dogs_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:padding="10dp"
                android:text="Change Dogs" />

        </LinearLayout>

        <TextView
            android:id="@+id/humans_in_park_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="Humans In Park Currently:0"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp">

            <EditText
                android:id="@+id/Humans_edit_tv"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Enter Humans No"
                android:inputType="number"
                android:padding="10dp" />

            <ImageButton
                android:id="@+id/humans_btn"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:padding="10dp"
                android:src="@drawable/people" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>