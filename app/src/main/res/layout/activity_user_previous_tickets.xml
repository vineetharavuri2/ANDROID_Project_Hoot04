<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:background="#E5E5E5"
    tools:context=".activities.LoginActivity">

    <LinearLayout
        android:id="@+id/activity_mentor_chat_recycler_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/primary_dark">
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:tint="@color/white"
                android:padding="10dp"
                android:clickable="true"
                android:src="@drawable/ic_baseline_chevron_left_24"
                tools:ignore="UseAppTint"
                android:focusable="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:padding="15dp"
                android:gravity="start"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="My Previous"
                android:textColor="#FFFFFF"
                />
        </RelativeLayout>
        <!-- RECYCLER VIEW -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:padding="7dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        android:clickable="true"
        android:id="@+id/labourItemCard"
        android:foreground="?attr/selectableItemBackground"
        android:focusable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/parent_layout">

        <ImageView
            android:id="@+id/labour_item_image"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="7dp"
            app:srcCompat="@drawable/ticket"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/item_labour_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="135dp"
            android:layout_marginTop="9dp"
            android:maxLines="1"
            android:text="01-01-2023"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/cardview_dark_background" />
        <TextView
            android:id="@+id/useName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="135dp"
            android:layout_marginTop="40dp"
            android:maxLines="1"
            android:text="Person Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/primary" />
        <TextView
            android:id="@+id/ticketCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="135dp"
            android:layout_marginTop="60dp"
            android:maxLines="1"
            android:text="traffic violation rule"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/primary_dark" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_chevron_right_24"
            android:tint="#BFBDBD"
            android:alpha="0.7"
            tools:ignore="UseAppTint"
            />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>