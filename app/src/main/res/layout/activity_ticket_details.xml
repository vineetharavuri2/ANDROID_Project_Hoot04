<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.LoginActivity">
    <LinearLayout
        android:id="@+id/activity_mentor_chat_recycler_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/primary_dark">
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:tint="@color/white"
                android:padding="10dp"
                android:clickable="true"
                android:src="@drawable/ic_baseline_chevron_left_24"
                tools:ignore="UseAppTint"
                android:focusable="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:padding="15dp"
                android:gravity="start"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="My Tickets"
                android:textColor="#FFFFFF"
                />
        </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/parent_layout">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:padding="7dp"
            android:clickable="true"
            android:tintMode="add"
            android:src="@drawable/ticket"
            tools:ignore="UseAppTint"
            android:focusable="true" />
            <TextView
                android:id="@+id/tvTicketName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Title"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/secondary" />
                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:maxLines="1"
                    android:layout_gravity="start"
                    android:textAlignment="textStart"
                    android:drawablePadding="20dp"
                    android:text="person name"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:drawableTint="@color/yellow"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="20dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/gray" />
        <TextView
            android:id="@+id/tvVehicleNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:maxLines="1"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:drawablePadding="20dp"
            android:text="#"
            android:drawableLeft="@drawable/ic_baseline_123_24"
            android:drawableTint="@color/yellow"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/gray" />
        <TextView
            android:id="@+id/tvDatetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:maxLines="1"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:drawablePadding="20dp"
            android:text="01-01-2023 00:00"
            android:drawableTint="@color/primary"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_baseline_schedule_24"
            android:paddingLeft="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/gray" />
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:maxLines="1"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:drawablePadding="20dp"
            android:text="location"
            android:drawableTint="@color/primary"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            android:paddingLeft="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:maxLines="1"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:drawablePadding="20dp"
            android:text="00.00"
            android:drawableTint="@color/primary"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_baseline_attach_money_24"
            android:paddingLeft="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/gray" />
        <TextView
            android:id="@+id/tvInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:maxLines="1"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:drawablePadding="20dp"
            android:text="description"
            android:drawableTint="@color/yellow"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_baseline_info_24"
            android:paddingLeft="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amend"
                android:id="@+id/btnEdit"
                android:visibility="gone"
                android:textColor="@color/white"
                android:layout_marginRight="50dp"
                android:backgroundTint="@color/primary"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel/Close"
                android:id="@+id/btnClose"
                android:textColor="@color/white"
                android:backgroundTint="@color/red"/>
        </LinearLayout>
        </LinearLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
